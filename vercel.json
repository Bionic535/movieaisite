{
    "builds": [
        {
            "src": "movieaisite/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "250mb",
                "runtime": "python3.12"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "movieaisite/wsgi.py"
        }
    ],
    "buildCommand": "pip install -r requirements.txt"
}
